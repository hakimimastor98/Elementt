<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Samita.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#292929</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="Theme.Samita.About" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="FontTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="pix_font">fonts/NunitoSans-Regular.ttf</item>
        <item name="pix_fontBold">fonts/NunitoSans-Bold.ttf</item>
        <item name="pix_fontItalic">fonts/NunitoSans-SemiBold.ttf</item>
        <item name="pix_fontBoldItalic">fonts/QanelasSoft-ExtraBold.otf</item>
    </style>

    <style name="LightTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="iconWikipedia">@drawable/ic_wikipedia_black</item>
        <item name="iconVideo">@drawable/ic_video_black</item>
    </style>

    <style name="LightTheme.Preferences" parent="android:Theme.DeviceDefault.Light.DialogWhenLarge" />

    <style name="DarkTheme" parent="android:Theme.DeviceDefault">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="fgColor">@android:color/primary_text_dark</item>
        <item name="bgColor">@android:color/black</item>
        <item name="iconWikipedia">@drawable/ic_wikipedia_white</item>
        <item name="iconVideo">@drawable/ic_video_white</item>
    </style>

    <style name="DarkTheme.Preferences" parent="android:Theme.DeviceDefault.DialogWhenLarge" />

    <style name="ElementDetails" parent="android:TextAppearance.Medium">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ElementDetails.Label">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right|end</item>
    </style>

    <style name="ElementDetails.Value">
        <item name="android:textIsSelectable" tools:ignore="NewApi">true</item>
    </style>

    <style name="Link" parent="ElementDetails">
        <item name="android:textColor">#FF4F8FFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="TableRow" />

    <style name="TableRow.Odd">
        <item name="android:background">#44888888</item>
    </style>

</resources>

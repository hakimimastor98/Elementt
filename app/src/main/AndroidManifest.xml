<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kimi.elementsss">

    <application
        android:allowBackup="true"
        android:name=".ElementtApplication"

        android:icon="@mipmap/classroom"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SliderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".EquationBalancerr"/>
        <activity android:name=".TableActivityy"/>
        <activity android:name=".ElementListActivity"
            android:label="List of Elements"
            />
        <activity android:name=".QuizActivity" />
        <activity
            android:name="ElementDetailsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="element"
                    android:scheme="elementary" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/titleSettings" />
    </application>

</manifest>